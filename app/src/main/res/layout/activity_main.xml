<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_main_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_shark"
    tools:context=".ui.MainActivity">

    <Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:text="@string/text_music_list"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_22" />
    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSong"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_shark"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/cardPlayMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarMain" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlayMusic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagePlayMusic"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_30"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_pause"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/imageRewind"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_rewind_button"
                app:layout_constraintBottom_toBottomOf="@id/imagePlayMusic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imagePlayMusic"
                app:layout_constraintTop_toTopOf="@id/imagePlayMusic" />

            <ImageView
                android:id="@+id/imageForward"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_forward_button"
                app:layout_constraintBottom_toBottomOf="@id/imagePlayMusic"
                app:layout_constraintLeft_toRightOf="@id/imagePlayMusic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/imagePlayMusic" />

            <ImageView
                android:id="@+id/imageReplay"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_replay"
                app:layout_constraintBottom_toBottomOf="@id/imagePlayMusic"
                app:layout_constraintLeft_toRightOf="@id/imageForward"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/imagePlayMusic" />

            <ImageView
                android:id="@+id/image_music_list"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_menu"
                app:layout_constraintBottom_toBottomOf="@id/imagePlayMusic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imageRewind"
                app:layout_constraintTop_toTopOf="@id/imagePlayMusic" />

            <ProgressBar
                android:id="@+id/progressMusic"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:progressDrawable="@drawable/progress_music_custom"
                app:layout_constraintBottom_toTopOf="@id/imagePlayMusic"
                app:layout_constraintLeft_toLeftOf="@id/image_music_list"
                app:layout_constraintRight_toRightOf="@id/imageReplay" />

            <TextView
                android:id="@+id/textMusicInfor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:alpha="0.8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toTopOf="@id/progressMusic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/textMusicName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_10"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_22"
                app:layout_constraintBottom_toTopOf="@id/textMusicInfor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
